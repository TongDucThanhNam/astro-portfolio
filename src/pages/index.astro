---
import PageLayout from '@layouts/PageLayout.astro';
import SectionLayout from '@layouts/SectionLayout.astro';
import Hero from '@components/Hero.tsx';
import Skills from '@components/Skills.tsx';
import Projects from '@components/Projects.tsx';
import * as emoji from 'node-emoji';
---

<PageLayout title="Portfolio" subtitle="Nam's portfolio">
	<Hero client:load />
	<SectionLayout
		title="Skills"
		subtitle={`This is my skills ${emoji.emojify(':hammer_and_pick:')}`}
	>

		<Skills client:visible />
	</SectionLayout>
	<SectionLayout
		title="Projects"
		subtitle={`This is projects which i have done ${emoji.emojify(':airplane:')}`}
	>
		<Projects client:visible />
	</SectionLayout>
</PageLayout>

---
import PageLayout from '@/layouts/PageLayout.astro';
import SectionLayout from '@/layouts/SectionLayout.astro';
import {Skills} from '../components/Skills/Skills.tsx';
import Projects from '@/components/Projects.tsx';
import * as emoji from 'node-emoji';
import MacbookScrollSection from "@/components/MacbookScroll.tsx"
import Introduce from "../components/Introduce.astro";
import Compare from "../components/CompareSection.astro";
import {TimelineDemo} from "@/components/TimeLind"
import HeroSection from "../components/HeroSection.astro";
---

<PageLayout title="Nam's portfolio" subtitle="Terasumi">
    <!-- Hero Section -->
    <HeroSection/>

    <!--Spacer-->
    <div class="h-10"/>

    <!-- Introduce -->
    <Introduce/>

    <!--Spacer-->
    <div class="h-10"/>

    <!-- Macbook Scroll Section -->
    <MacbookScrollSection client:idle/>

    <!--Spacer-->
    <div class="h-10"/>

    <!-- Skills -->
    <SectionLayout
            title="Skills"
            subtitle={`This is my skills ${emoji.emojify(':hammer_and_pick:')}`}
    >
        <Skills client:idle/>
    </SectionLayout>

    <!--Spacer-->
    <div class="h-10"/>

    <Compare />

    <!--Spacer-->
    <div class="h-10"/>

    <!-- Projects -->
    <SectionLayout
            title="Projects"
            subtitle={`This is projects which i have done ${emoji.emojify(':airplane:')}`}
    >
        <Projects client:visible/>
    </SectionLayout>

    <!--Spacer-->
    <div class="h-10"/>

    <TimelineDemo client:idle />
</PageLayout>